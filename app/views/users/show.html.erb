<%= render 'show', books: @books %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title:</th>    
      <th>Opinion:</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
      <%= link_to user_path(current_user) do %>
        <%= image_tag book.user.get_profile_image(80,80) %>
      <% end %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table> 



