<h2>User info</h2>
<% if @user && @user.profile_image.attached? %>
    <%= image_tag url_for(@user.profile_image), size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>

<table>
  <tbody>
    <tr>
      <td>
        <% if @user %>
          <div>name: <%= current_user.name %></div>
          <div>introduction: <%= current_user.body %></div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table> 

<div>
  <%= link_to "絵文字", edit_user_path(current_user) %>
</div>

<h2>New Book</h2>
<%= form_with(model:Book.new) do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
	
  <h4>Opinion</h4>
    <%= f.text_area :body %>
	
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>