<h2>User info</h2>
<% if @user && @user.profile_image.attached? %>
    <%= image_tag url_for(@user.profile_image), size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %>

<table class="table">
  <tbody>
    <tr>
      <td>
        <% if @user %>
          <div>name: <%= current_user.name %></div>
          <div>introduction: <%= current_user.body %></div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table> 

<div class="row">
  <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block current_user" do %>
  <i class="fas fa-user-cog mr-2"></i>
<% end %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with(model:Book.new) do |f| %>
<div class="form-group">
  <label for="book_title">Title</label>
  <div>
    <%= f.text_field :title %>
  </div>
</div>
	
<div class="form-group">
  <label for="book_body">Opinion</label>
    <div>  
      <%= f.text_area :body %>
	  </div>
</div>

<div class="form-group">
    <%= f.submit 'Create Book', class:'btn btn-success' %>
</div>
<% end %>