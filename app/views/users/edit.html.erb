<h1>User Info</h1>

<%= form_with model: @user, url:user_path(@user) do |f| %>

  <%= f.label :Name %>
  <div>
    <%= f.text_field :name %>
  </div>
  
  <%= f.label :Image %>
  <div>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <%= f.label :Introduction %>
  <div>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update User' %>
  </div>
  
<% end %>
