<h1>User Info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url:user_path(@user) do |f| %>

  <%= f.label :Name %>
  <div>
    <%= f.text_field :name %>
  </div>
  
  <%= f.label :Image %>
  <div>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <%= f.label :Introduction %>
  <div>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update User' %>
  </div>
  
<% end %>
