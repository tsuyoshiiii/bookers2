<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User Info</h2>      
        <%= form_with model: @user, url:user_path(@user) do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
              <div>
                <%= f.text_field :name %>
              </div>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
              <div>
                <%= f.file_field 'user[profile_image]', accept: "image/*" %>
              </div>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
              <div>
                <%= f.text_area :introduction %>
              </div>
          </div>
          
          <div>
            <%= f.submit 'Update User', class:'btn btn-secondary' %>
          </div>
        <% end %>
    </div>
  </div>
</div>