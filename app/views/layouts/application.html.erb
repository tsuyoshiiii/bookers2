<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5bd51b8c93.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
            
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <a class="nav-link text-light" href="<%= user_path(current_user) %>">
                  <i class="fa-solid fa-home"></i>
                    <span>Home</span>
                  </a>

                  <a class="nav-link text-light" href="<%= users_path %>">
                  <i class="fa-solid fa-users"></i>
                    <span>Users</span>
                  </a> 

                  <a class="nav-link text-light" href="<%= books_path %>">
                  <i class="fa-solid fa-book-open"></i>
                    <span>Books</span>
                  </a> 

                  <a class="nav-link text-light" href="<%= destroy_user_session_path %>", data-method="delete">
                  <i class="fa-solid fa-sign-out-alt"></i>
                    <span>Log out</span>
                  </a>
              
                <% else %>
                  <a class="nav-link text-light" href="<%= root_path %>">
                  <i class="fa-solid fa-home"></i>
                    <span>Home</span>
                  </a>

                  <a class="nav-link text-light" href="<%= about_path %>">
                  <i class="fa-solid fa-link"></i>
                    <span>About</span>
                  </a>

                  <a class="nav-link text-light" href="<%= new_user_registration_path %>">
                  <i class="fa-solid fa-user-plus"></i>
                    <span>Sign up</span>
                  </a>

                  <a class="nav-link text-light" href="<%= new_user_session_path %>">
                  <i class="fa-solid fa-sign-in-alt"></i>
                    <span>Log in</span>
                  </a>
                <% end %>
              </ul>
            </div>
        </div>
      </nav>
    </header>

    <main>
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
