<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td>
        <%= link_to user.name, user_path(current_user) %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(@book.id) %>
      </td>
      <td>
      <%= form_for @book, url: book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" } do |f| %>
        <%= f.submit "Destroy" %>
      <% end %>
      </td>
    </tr>
  </tbody>
</table>

