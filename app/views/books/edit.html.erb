<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    
  <div>
    <%= f.submit 'Update Book' %>
  </div>  
  <% end %>

  <%= link_to "show", book_path(@book.id) %>|
  <%= link_to "Back", books_path(@book.id) %>

